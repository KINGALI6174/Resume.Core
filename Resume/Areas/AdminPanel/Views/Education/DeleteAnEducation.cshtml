@model Resume.Domain.Entities.Education.Education

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">حذف سابقه تحصیلی</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a href="">داشبورد ادمین</a></li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">حذف اطلاعات سوابق تحصیلی</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-area="AdminPanel"
          asp-controller="Education"
          asp-action="DeleteAnEducation"
          method="post">
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">id</label>
                <input type="text" class="form-control" Id="exampleInputEmail1" asp-for="ID">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">عنوان مدرک تحصیلی</label>
                <input type="text" class="form-control" id="exampleInputEmail1" asp-for="EducationTitle" placeholder="عنوان مدرک تحصیلی را وارد کنید">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">بازه زمانی دریافت مدرک</label>
                <input type="text" class="form-control" id="exampleInputEmail1" asp-for="EducationDuration" placeholder="بازه مدرک تحصیلی را وارد کنید">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">عنوان مدرک تحصیلی</label>
                <input type="text" class="form-control" id="exampleInputEmail1" asp-for="EducationDescription" placeholder="توضیحات مدرک تحصیلی را وارد کنید">
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-danger">حذف</button>
        </div>
    </form>
</div>